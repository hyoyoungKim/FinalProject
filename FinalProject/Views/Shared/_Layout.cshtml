<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Foodies.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:ghostwhite">
    <div class="navbar navbar-fixed-top" style="background-color:whitesmoke">
        <div class="container">
            <div class="col-lg-10">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href='http://localhost:2697/Users/Index'><img src='../Images/foodies2.png' width='125' /></a>

                </div>
                <div class="nav-divider">
                    <ul class="nav navbar-nav">
                        <li></li>



                    </ul>

                </div>

                <div class="navbar-form">
                    <ul class="nav navbar-nav">


                        <li>@Html.ActionLink("Home", "Index", "Recipe")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                       
                    </ul>

                </div>
            </div>
            <div class="navbar-collapse collapse">
        
                    <ul class="nav navbar-nav">
                        <li><a href='http://localhost:2697/Home/Index'>Logout</a></li>

                    </ul>

                
            </div>


        </div>
    </div>
    <div class="container body-content">

        <br />
        <br />
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Foodies.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>